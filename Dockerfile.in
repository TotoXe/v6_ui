FROM docker.io/debian:jessie

ENV DEBIAN_FRONTEND noninteractive

RUN echo 'APT::Install-Recommends "0";' > /etc/apt/apt.conf.d/50no-install-recommends
RUN echo 'APT::Install-Suggests "0";' > /etc/apt/apt.conf.d/50no-install-suggests

WORKDIR /var/www/

COPY requirements.txt \
     setup.py \
     build.json \
     package.json \
     Makefile \
     common.ini.in \
     production.ini.in \
     README.md \
     CHANGES.txt \
     ./
COPY c2corg_ui c2corg_ui
COPY less less
COPY tools tools
COPY scripts scripts

COPY config/default \
     config/dev \
     config/

RUN apt-get update \
 && apt-get -y upgrade \
 && apt-get -y install \
    python3 \
    python3-chardet \
    python3-colorama \
    python3-html5lib \
    python3-pkg-resources \
    python3-requests \
    python3-six \
    python3-urllib3 \
    libgeos-c1 \
    make \
    python3-dev \
    python3-pip \
    libgeos-dev \
    nodejs-legacy \
    npm \
    openjdk-7-jdk \
    gettext \
    gcc \
    git \
    virtualenv \
 && make -f config/dev install \
 && py3compile -f .build/venv/ \
 && rm -fr .cache \
 && apt-get -y purge \
    python3-dev \
    python3-pip \
    libgeos-dev \
    nodejs-legacy \
    npm \
    openjdk-7-jdk \
    gettext \
    gcc \
    git \
    virtualenv \
 && apt-get -y --purge autoremove \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

ENV version="{version}" \
    PATH=/var/www/.build/venv/bin/:$PATH

COPY /docker-entrypoint.sh /
COPY /docker-entrypoint.d/* /docker-entrypoint.d/
ENTRYPOINT ["/docker-entrypoint.sh"]

EXPOSE 8080
CMD ["gunicorn", "--paste", "production.ini", "-u", "www-data", "-g", "www-data", "-b", ":8080"]

